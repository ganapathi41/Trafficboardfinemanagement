<%- include('../layouts/adminheader') %>

<h2 class="page-title">Send notice</h2>
<a href="/admin/notices" class="btn btn-primary">Back to all pages</a>
<form method="POST" action="/admin/notices/add-notice" enctype="multipart/form-data">
   <div class="form-group">
      <label for=" ">Name</label>
      <input type="text" class="form-control" name="name" placeholder="Name..." value="<%= name %>">
   </div> 
   <div class="form-group">
      <label for=" ">Phone no</label>
      <input type="number" class="form-control" name="phone" placeholder="phone...." value="<%= phone %>">
   </div> 
     <div class="form-group">
        <label for=" ">Notice</label>
        <textarea class="form-control" name="notice" placeholder="content" cols="10" rows="10"><%= notice %></textarea>
     </div>   
    <button class="btn btn-default">Submit</button>
</form>
<%- include('../layouts/adminfooter') %>